<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    android:background="@color/lightgrey"
    tools:context="com.corebaseit.advancedgridviewjson.fragments.ListViewFragment">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="@color/textColorPrimary"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="136dp"
            android:layout_marginTop="0dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@color/textColorPrimary"
            android:contentDescription="@string/desc_img_row" />

        <TextView
            android:id="@+id/txv_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/text_view_row" />

        <TextView
            android:id="@+id/txv_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/txv_row2"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/navigationBarColor"
            android:text="@string/text_view_row" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>


