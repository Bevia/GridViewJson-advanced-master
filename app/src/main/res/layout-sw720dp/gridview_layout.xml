<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/horizontal1Forlinear1"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:id="@+id/linear1LSVL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/linearRelative1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey">

                    <!--

                    INDICATORS FOR AVLoadingIndicatorView:
Row 1

    BallPulse
    BallGridPulse
    BallClipRotate
    BallClipRotatePulse

Row 2

    SquareSpin
    BallClipRotateMultiple
    BallPulseRise
    BallRotate

Row 3

    CubeTransition
    BallZigZag
    BallZigZagDeflect
    BallTrianglePath

Row 4

    BallScale
    LineScale
    LineScaleParty
    BallScaleMultiple

Row 5

    BallPulseSync
    BallBeat
    LineScalePulseOut
    LineScalePulseOutRapid

Row 6

    BallScaleRipple
    BallScaleRippleMultiple
    BallSpinFadeLoader
    LineSpinFadeLoader

Row 7

    TriangleSkewSpin
    Pacman
    BallGridBeat
    SemiCircleSpin
                    -->

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/myProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        app:indicator="BallBeat"
                        app:indicator_color="@color/whitesmoke" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1LSVR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear1LSVRUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.09"
                    android:background="@color/silver"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1linear1LSVRUpUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="2dp"
                        android:text="testing new adapter #1"
                        android:textColor="@color/Black"
                        android:textSize="18sp" />

                    <!-- android:gravity="center_vertical|center_horizontal" -->

                    <TextView
                        android:id="@+id/textView1linear1LSVRUpBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:maxLines="18"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="0dp"
                        android:text="testing new adapter #1"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear1LSVRBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.16"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView1linear1LSVRBottomUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="4dp"
                            android:background="@null"
                            android:gravity="bottom"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="0dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/blue_stone"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView2linear1LSVRBottomBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView1linear1LSVRBottomUp"
                            android:layout_gravity="top"
                            android:layout_marginTop="0dp"
                            android:background="@null"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/Black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView3linear1LSVRBottomUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView2linear1LSVRBottomBottom"
                            android:layout_gravity="top"
                            android:layout_marginTop="5dp"
                            android:background="@null"
                            android:gravity="bottom"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/blue_stone"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView4linear1LSVRBottomBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView3linear1LSVRBottomUp"
                            android:layout_gravity="top"
                            android:layout_marginTop="0dp"
                            android:background="@null"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/Black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView5linear1LSVRBottomUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView4linear1LSVRBottomBottom"
                            android:layout_gravity="top"
                            android:layout_marginTop="5dp"
                            android:background="@null"
                            android:gravity="bottom"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/blue_stone"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView6linear1LSVRBottomBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView5linear1LSVRBottomUp"
                            android:layout_gravity="top"
                            android:layout_marginTop="0dp"
                            android:background="@null"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="testing new adapter #1"
                            android:textColor="@color/Black"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/silver" />

</FrameLayout>